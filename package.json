{
  "name": "simplex-ecom-api",
  "version": "1.0.0",
  "description": "E-Commerce API built with Node.js, Express, PostgreSQL, and BullMQ for high-concurrency order processing",
  "main": "index.js",
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "scripts": {
    "start": "nodemon index.js",
    "start:pm2": "pm2 start ecosystem.config.js",
    "stop:pm2": "pm2 stop ecosystem.config.js",
    "restart:pm2": "pm2 restart ecosystem.config.js",
    "db:create": "npx sequelize-cli db:create",
    "db:migrate": "npx sequelize-cli db:migrate",
    "db:migrate:undo": "npx sequelize-cli db:migrate:undo",
    "worker:payment": "node workers/payment.worker.js",
    "worker:notification": "node workers/notification.worker.js"
  },
  "keywords": [
    "ecommerce",
    "api",
    "express",
    "postgresql",
    "sequelize",
    "bullmq",
    "jwt",
    "rest-api"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "amqplib": "^0.10.9",
    "bcrypt": "^6.0.0",
    "bull": "^4.16.5",
    "bullmq": "^5.66.5",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "express-unless": "^2.1.3",
    "ioredis": "^5.9.1",
    "joi": "^18.0.2",
    "jsonwebtoken": "^9.0.2",
    "nodemon": "^3.1.10",
    "pg": "^8.16.3",
    "sequelize": "^6.37.7",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  }
}
